{
  "name": "@guscrawford.com/json-xform",
  "version": "1.1.0-beta",
  "description": "A json transformer",
  "main": "src/json-xform.ts",
  "license": "MIT",
  "repository": "https://github.com/guscrawford-com/json-xform",
  "keywords": ["JSON","transform","template","static"],
  "devDependencies": {
    "@types/jasmine": "^3.3.13",
    "cpy-cli": "^2.0.0",
    "jasmine": "^3.4.0",
    "renamer": "^1.1.2",
    "rimraf": "^2.6.3",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^2.0.7",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "docs":"yarn docs:markdown && yarn docs:html",
    "docs:markdown":"rimraf docs/md && typedoc ./src --theme markdown --out docs/md",
    "docs:html": "rimraf docs/html && typedoc ./src --out docs/html",
    "package": "yarn docs && yarn build && cpy README.md dist && cpy CHANGELOG.md dist && cpy package.lib.json dist && renamer --find .lib dist/*.json",
    "build": "rimraf dist && tsc",
    "test": "tsc -p tsconfig.jasmine.json && yarn test:run",
    "test:run": "jasmine \"test/**/*[sS]pec.js\"",
    "release": "yarn package && cd dist && yarn publish --access=public"
  }
}
